

        ./configure --prefix=$PREFIX \
                --enable-threads \
                --enable-largefile \
                --with-libtool \
                --enable-shared \
                --enable-static \
                --with-openssl=/usr \
                --with-gssapi=/usr \
                --with-gnu-ld \
                --with-dlz-postgres=no \
                --with-dlz-mysql=no \
                --with-dlz-bdb=no \
                --with-dlz-filesystem=no \
                --with-dlz-ldap=no \
                --with-dlz-stub=no \
                --enable-ipv6 \

make || exit 1
make install DESTDIR=$DESTDIR INSTALLROOT=$DESTDIR || exit 1
rm -rf ${DESTDIR}${PREFIX}/share

